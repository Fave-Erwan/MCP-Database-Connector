# Database Configuration
# SQLite: sqlite:database.db
# PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:database.db

# Set to false to block all write/mutation queries (INSERT, UPDATE, DELETE)
# Set to true to allow all queries
ALLOW_MUTATIONS=true

# Optional whitelist of allowed tables (comma-separated). If unset, whitelist is not enforced.
# Example: ALLOWED_TABLES=users,public.orders
ALLOWED_TABLES=

# MCP Server Configuration
MCP_SERVER_NAME=MCP-Database-Connector
